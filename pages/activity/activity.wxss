/* pages/activity/activity.wxss */
.box{
  width: 100%;
  background: #f3f2f7;
}
.box .activitybox{
  position: relative;
  border-radius: 20rpx;
  background-color: #fff;
  margin: 40rpx 30rpx;
  box-shadow: 0rpx 0rpx 10rpx 10rpx #ccc;
  font-size: 30rpx;
  color: #888888;
}

.box .activitybox .image{
  width: 100%;
  height: 200rpx;
  padding: 0rpx;
  margin: 0rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  background-size: 100%;
  background-repeat: no-repeat;
}
.box .activitybox .msg ,.box .activitybox .hint {
  padding: 10rpx 20rpx 20rpx 20rpx;
}
.dis {
  float: left;
  font-size: 30rpx;
  font-weight: bold;
  color:#000;
  width: 49%;
  text-overflow:ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.site{
  float: right;
  width: 49%;
  text-align: right;
  text-overflow:ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.site label{
  display: inline-flex;
  vertical-align: middle;
  width: 40rpx;
  height: 40rpx;
  background-size: 100%;
  background-repeat: no-repeat;
  margin-right: 10rpx;
}
.bottombox .people ,.bottombox .comment1{
  display: inline-block;
  margin-top: 15rpx;
  margin-left: 20rpx;
}
.img label{
  display: inline-flex;
  vertical-align: middle;
  width: 40rpx;
  height: 40rpx;
  background-size: 100%;
  background-repeat: no-repeat;
  margin-right: 20rpx;
}
.bottombox .time{
  float: left;
  margin-top: 10rpx;
  width:calc(50% + 30rpx);
}
.bottombox text, .site text{
  display: inline-flex;
  vertical-align: middle;
  font-size: 27rpx;
}
