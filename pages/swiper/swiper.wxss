/* pages/swiper/swiper.wxss */
.box{
  position: relative;
  margin: 50rpx auto;
  width: 80%;
  height: 85%;
  background: #fff;
  box-shadow: 0 0 20rpx 20rpx #ccc;
  border-radius: 30rpx;
  overflow: hidden;

}
.box swiper{
   width: 100%;
  height: 100%;
   overflow: hidden;
}
.box swiper swiper-item{
  border-radius: 30rpx;
} 
.box swiper swiper-item .slide-image{
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
}