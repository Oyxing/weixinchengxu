/* pages/actibityform/actibityform.wxss */

.actibityformbox{
  width: 100%;
  height: 100vh;
  background: #f3f2f7;
}
.actibityformbox .image{
  width: 80%;
  height: 130px;
  margin:20rpx 10%;
  text-align: center;
}
.actibityformbox .image .slide-image{
  width: 100%;
  height: 100%;
}
.actibityformbox .form {
  width: 100%;
  background: #fff;
  margin: 20rpx auto;
}
.formbox{
  height: 60rpx;
  padding: 20rpx 0rpx 20rpx 20rpx;
  border-top-style: solid;
  border-top-width: 0.5rpx;
  border-top-color: #f3f2f7
}
.formbox .formimg{
  float: left;
  font-size:60rpx;
}
.formbox .formtitle{
  margin-left: 20rpx;
  font-size: 30rpx;
  line-height: 60rpx;
}
.formbox .frommsg input,.formbox .frommsg text{
  float: right;
  text-align: right;
  font-size: 30rpx;
  margin-right: 10px;
}
.formbox .frommsg picker, .formbox .frommsg label{
  float: right;
  font-size: 30rpx;
  margin-right: 20rpx;
}
.formbox .frommsg switch{
   float: right;
  font-size: 30rpx;
  margin-right: 20rpx;
}
.formbox textarea{
  height: 100rpx;
}

.moreset{
  background: #fff;
  padding: 20rpx;
  font-size: 30rpx;
}
.moreset .Options{
  padding: 10rpx 10rpx;
  cursor: pointer;
}
.moreset .Options label{
  float: right;
  width: 32rpx;
  height: 32rpx;
  background-repeat: no-repeat;
  background-size: 100%;
}
.submit{
  padding: 50rpx;
  margin-top: 20rpx;
}
.submit button{
  border-radius: 40rpx;
  background: #ff9632;
  color: #fff;
  font-size: 30rpx;
  margin-bottom: 50rpx;
  padding: 7rpx 0px;
}

.open-seting-bg {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  text-align: center;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.btn-openset {
  display: flex;
  justify-content: space-around;
  font-size: 30rpx;
  margin-top: 60rpx;
}
.set-title {
  font-size: 30rpx;
  margin-top: 40rpx;
}
.open-set-inner {
  width: 400rpx;
  height: 220rpx;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  background: #ffffff;
  padding: 30rpx;
}
.btn-openset > view:nth-child(1) {
  color: #919191;
}
.button-style {
  width: 100%;
  height: 100%;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 0 0;
  font-size: 30rpx;
  line-height: 0;
  color: red;
}
button::after {
  border: 0;
}/* pages/actibityupform/actibityupform.wxss */