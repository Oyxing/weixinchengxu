/* pages/user/user.wxss */
.userbox{
  position: relative;
  width: 100%;
  height: 100vh;
  background: #f3f2f7;
}
.userinfo {
  display: flex;
  height: 400rpx;
  background:#ffad2f;
  flex-direction: column;
  align-items: center;
}
.userinfo button{
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  margin-top: 60px;
  border-radius: 50%;
  font-size: 30rpx;
}
.userinfo image{
  margin-top: 60px;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
}

.usermotto {
  position: relative;
  margin-top: 20rpx;
}
.usermotto view {
  width: 100%;
  height: 70rpx;
  background: #fff;
  padding: 20rpx 0rpx; 
}
.usermotto label:nth-child(1) {
  display: inline-flex;
  vertical-align: middle;
  width: 50rpx;
  height: 50rpx;
  margin-top: 10rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  background-size: 100%;
  background-repeat: no-repeat;
}
.usermotto label:nth-child(2) {
 
  display: inline-flex;
  vertical-align: middle;
  font-size: 28rpx;
  color: #8f908a;
  line-height: 70rpx;
}
.usermotto label:nth-child(3) {
  float: right;
  width: 32rpx;
  height: 32rpx;
  margin-top: 25rpx;
  font-size: 30rpx;
  margin-right: 20rpx;
}